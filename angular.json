{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "projects": {
    "angular-components": {
      "projectType": "library",
      "root": "libs/angular-components",
      "sourceRoot": "libs/angular-components/src",
      "architect": {
        "start": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "libs/angular-components/.storybook",
            "browserTarget": "angular-components:build",
            "port": 6006,
            "styles": ["node_modules/@tehik-ee/core-styles/src/index.scss"]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "libs/angular-components/.storybook",
            "outputDir": "dist/storybook/angular-components",
            "browserTarget": "angular-components:build"
          }
        },
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "libs/angular-components/tsconfig.lib.json",
            "project": "libs/angular-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/angular-components/tsconfig.lib.prod.json"
            }
          }
        }
      }
    }
  }
}
