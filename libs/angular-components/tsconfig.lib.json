{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "docs/**/*.spec.ts",
    "docs/**/*.test.ts",
    "tedi/**/*.spec.ts",
    "tedi/**/*.test.ts",
    "community/**/*.spec.ts",
    "community/**/*.test.ts",
    "jest.config.ts"
  ],
  "include": [
    "docs/**/*.ts",
    "tedi/**/*.ts",
    "community/**/*.ts",
    "public-api.ts"
  ]
}
