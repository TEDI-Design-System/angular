{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "projects": {
    "angular-components": {
      "projectType": "library",
      "root": "libs/angular-components",
      "sourceRoot": "libs/angular-components/src",
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "browserTarget": "angular-components:build"
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "./libs/angular-components/.storybook",
            "outputDir": "./dist/storybook/angular-components",
            "browserTarget": "angular-components:build"
          }
        }
      }
    }
  }
}
