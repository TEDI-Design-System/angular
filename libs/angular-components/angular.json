{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "angular-components": {
      "projectType": "library",
      "root": ".",
      "sourceRoot": ".",
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "./.storybook",
            "compodoc": true,
            "compodocArgs": ["-e", "json", "-d", "."],
            "port": 6006,
            "styles": ["styles/index"]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "./.storybook",
            "compodoc": true,
            "compodocArgs": ["-e", "json", "-d", "."],
            "outputDir": "dist/storybook-static",
            "styles": ["styles/index"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/components/**/*.ts",
              "src/**/components/**/*.html"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
