{
  "name": "@tehik-ee/tedi-design-system",
  "version": "0.0.0",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "npx stylelint \"**/*.scss\" --fix && eslint . --fix",
    "lint:ci": "npx stylelint \"**/*.scss\" && eslint ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TEHIK-EE/tedi-design-system.git"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.81.0",
    "semantic-release": "^23.0.3",
    "stylelint": "^16.12.0",
    "stylelint-scss": "^6.10.0",
    "typescript": "5.5.4"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional",
    "rules": {
      "subject-case": [
        1,
        "always",
        "start-case"
      ],
      "subject-min-length": [
        2,
        "always",
        10
      ],
      "references-empty": [
        2,
        "never"
      ]
    }
  },
  "lint-staged": {
    "*.{css,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,css,scss,json,md}": "prettier --write"
  }
}
